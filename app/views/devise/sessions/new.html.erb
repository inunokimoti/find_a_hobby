<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ログイン</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード（6文字以上）</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>